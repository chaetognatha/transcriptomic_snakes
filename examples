# ex 1
SAMPLE, = glob_wildcards('{sample}')
rule all:
        input:
                expand('{sample}.2', sample=SAMPLE)


rule first:
        input:
                '{sample}'
        output:
                '{sample}.2'
        shell:
                'mv {input} {output}'


# example 2
SAMPLE, = glob_wildcards('Data/{sample}.0')

rule all:
        input:
                expand('Data/{sample}.2', sample=SAMPLE)


rule first:
        input:
                'Data/{sample}.0'
        output:
                'Data/{sample}.2'
        shell:
                'mv {input} {output}'